{
  "manifest_version": 3,

  "name": "CodeBreaker",
  "description": "Enhance season 2 of breakthecode.tech",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["https://breakthecode.tech/game"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "web_accessible_resources": [
    {
      "resources": ["js/injected.js"],
      "matches": [
        "https://breakthecode.tech/*"
      ]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
